%table.table.table-bordered
  %thead
    %tr
      %th Poker Sessions
      %th Amount Won
      %th TX Count
      %th Total
  %tbody
    %tr
      %td= @poker_sessions.count
      %td= @amount_won
      %td= @num_transactions
      %td= @total_amount

%table.table.table-bordered
  %thead
    %tr
      %th Date
      %th Amount
      %th Note
      %th Actions
  %tbody
    -@bankroll_transactions.each do |tx|
      %tr
        %td= tx.date
        %td= tx.amount
        %td= tx.note
        %td= fa_icon('edit')
