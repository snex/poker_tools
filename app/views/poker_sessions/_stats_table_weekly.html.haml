%thead
  %tr
    %th.text-center{colspan: 8}
      Weekly Stats
  =render partial: 'stats_table_headers'
%tbody.text-center
  %tr
    %td= @ps_records.weekly_pct_won
    %td= @ps_records.weekly_best
    %td= @ps_records.weekly_worst
    %td
      %div= "#{@ps_records.weekly_avg_wins} (mean)"
      %div= "#{@ps_records.weekly_avg_wins_median} (median)"
    %td
      %div= "#{@ps_records.weekly_avg_losses} (mean)"
      %div= "#{@ps_records.weekly_avg_losses_median} (median)"
    %td
      %div= "#{@ps_records.weekly_avg} (mean)"
      %div= "#{@ps_records.weekly_avg_median} (median)"
    %td= @ps_records.weekly_longest_win_streak
    %td= @ps_records.weekly_longest_loss_streak
